<div class="page-header">
  <h1>
    Properties
    <a href="/properties/new" class="btn btn-lg btn-success">New Property</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Square feet</th>
        <th>Intended use</th>
        <th>Asking price</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @properties.each do |property| %>
      <tr>
        <td><%= property.description %></td>
        <td><%= property.square_feet %></td>
        <td><%= property.intended_use %></td>
        <td><%= property.asking_price %></td>
        <td><%= property.user_id %></td>
        <td>
          <a href="/properties/<%= property.id %>" class="btn btn-primary">Show</a>
          <a href="/properties/<%= property.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_property/<%= property.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
      <div class="row">
            <div class="col-md-12">
              <form action="/create_proposal" method="post">
                <!-- Hidden input for authenticity token to protect from forgery -->
                <input name="authenticity_token" type="hidden" value=<%= form_authenticity_token %>>

                  <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value=<%= current_user.id %>>
                  <input type="hidden" id="property_id" name="property_id" placeholder="Property" class="form-control" value=<%= property.id %>>

                <button class="btn btn-success">
                  Create Proposal
                </button>
                or
                <a href="/proposals">Cancel</a>
              </form>
            </div>
          </div>
        </td>
 

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>