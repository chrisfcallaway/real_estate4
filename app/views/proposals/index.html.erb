<div class="page-header">
  <h1>
    Proposals
    <a href="/proposals/new" class="btn btn-lg btn-success">New Proposal</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Property</th>
        <th>Store name</th>
        <th>Description</th>
        <th>Square feet</th>
        <th>Nearest</th>
        <th>Bid</th>
        <th>Architectural</th>
        <th>Text</th>
        <th>Image</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @proposals.each do |proposal| %>
      <tr>
        <td><%= proposal.property_id %></td>
        <td><%= proposal.store_name %></td>
        <td><%= proposal.description %></td>
        <td><%= proposal.square_feet %></td>
        <td><%= proposal.nearest %></td>
        <td><%= proposal.bid %></td>
        <td><%= proposal.architectural %></td>
        <td><%= proposal.text %></td>
        <td><img src="<%= proposal.image %>" class="img-responsive"></td>
        <td><%= proposal.user_id %></td>
        <td>
          <a href="/proposals/<%= proposal.id %>" class="btn btn-primary">Show</a>
          <a href="/proposals/<%= proposal.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_proposal/<%= proposal.id %>" class="btn btn-danger" rel="nofollow">Delete</a>2
          <div class="row">
            <div class="col-md-12">
              <form action="/create_favorite" method="post">
                <!-- Hidden input for authenticity token to protect from forgery -->
                <input name="authenticity_token" type="hidden" value=<%= form_authenticity_token %>>

                  <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value=<%= current_user.id %>>
                  <input type="hidden" id="photo_id" name="photo_id" placeholder="Photo" class="form-control" value=<%= proposal.id %>>
                  <input type="hidden" id="proposal_id" name="proposal_id" placeholder="Photo" class="form-control" value=<%= proposal.id %>>

                <button class="btn btn-success">
                  Create Favorite
                </button>
                or
                <a href="/favorites">Cancel</a>
              </form>
            </div>
          </div>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
